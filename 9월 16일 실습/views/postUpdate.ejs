<link rel="stylesheet" href="/css/input.css">

<form action="/post/update/<%= post.post_id %>" method="post">
    <input type="text" class="input-text" name="title" placeholder="title..." value="<%= post.title %>">
    <textarea name="content" id="" class="input-content" cols="30" rows="10" placeholder="content..."><%= post.content %></textarea>
    <button>Submit</button>
</form>